{
  "name": "vestywinbox",
  "private": true,
  "version": "1.0.0",
  "description": "Application de gestion syst√®me Windows avec interface moderne",
  "type": "module",
  "author": "Vesty",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "lint": "eslint .",
    "preview": "vite preview",
    "electron": "electron .",
    "start": "npm run build && electron .",
    "dev:electron": "concurrently \"npm run dev\" \"wait-on http://localhost:5173 && electron .\"",
    "dist": "npm run build && electron-builder",
    "postbuild": "robocopy assets dist/assets /E /NFL /NDL /NJH /NJS /NC /NS /NP"
  },
  "build": {
    "appId": "com.vestywinbox.app",
    "productName": "VestyWinBox",
    "asar": false,
    "files": [
      "dist/**/*",
      "electron/**/*",
      "assets/tools/**/*"
    ],
    "directories": {
      "buildResources": "assets"
    },
    "win": {
      "target": "nsis",
      "icon": "assets/logo_vestywinbox.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  },
  "dependencies": {
    "basic-ftp": "^5.0.5",
    "framer-motion": "^12.23.6",
    "lucide-react": "^0.344.0",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-dropzone": "^14.3.8",
    "ssh2-sftp-client": "^12.0.1",
    "systeminformation": "^5.27.7",
    "xml2js": "^0.6.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.9.1",
    "@types/react": "^18.3.5",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "^8.38.0",
    "@typescript-eslint/parser": "^8.38.0",
    "@vitejs/plugin-react": "^4.3.1",
    "concurrently": "^9.2.0",
    "electron": "^30.0.0",
    "electron-builder": "^24.6.0",
    "eslint": "^9.9.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.1.0-rc.0",
    "eslint-plugin-react-refresh": "^0.4.11",
    "globals": "^15.9.0",
    "typescript": "^5.5.3",
    "typescript-eslint": "^8.3.0",
    "vite": "^7.0.5",
    "wait-on": "^8.0.3"
  }
}
